<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
    <settings>
        <!-- db와 java 파일에서 각각 스네이크, 카멜 케이스로 정의돼있을 경우 자동으로 매핑해주는 설정 -->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
    </settings>

    <!-- sql 쓰는 xml 파일(mapper 파일)에 클래스 타입 써줄 때 패키지.패키지.클래스명 형태
         패키지를 생략하고 시을 때 config 파일에 기본 패키지로 설정하면 됨
         mapper 파일에는 클래스명만 쓰면 됨-->
    <typeAliases>
        <package name="org.scoula.board.domain" />
    </typeAliases>
</configuration>
